<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Restaurant</title>
    <link rel="stylesheet" href="/stylesheets/restaurants/editRestaurant.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>

  <body>
    <%- include('../partials/header') %> 

    <main class="container">
      <div class="form-card">
        <form id="editRestaurantForm" action="/restaurants/editRestaurant/<%= restaurant._id %>" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="<%= restaurant.name %>" required />
          </div>

          <div class="form-group">
            <label for="address">Address</label>
            <input type="text" id="address" name="address" value="<%= restaurant.address %>" required />
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="text" id="phone" name="phone" value="<%= restaurant.phone %>" required />
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" value="<%= restaurant.email %>" required />
            </div>
          </div>

          <div class="form-group">
            <label for="openingHours">Opening Hours</label>
            <input type="text" id="openingHours" name="openingHours" value="<%= restaurant.openingHours %>" required />
          </div>

          <div class="form-group">
            <label for="paymentMethods">Payment Methods</label>
            <input type="text" id="paymentMethods" name="paymentMethods" value="<%= restaurant.paymentMethods %>" required />
          </div>

          <div class="form-group">
            <label for="menus">Associated Menus</label>
            <select name="menus" id="menus" multiple required>
              <% menus.forEach(menu => { %>
                <option value="<%= menu._id %>" <% if (restaurant.menus.includes(menu._id.toString())) { %> selected <% } %>>
                  <%= menu.name %>
                </option>
              <% }); %>
            </select>
            <small>Hold Ctrl (Windows) or Cmd (Mac) to select multiple menus.</small>
          </div>

          <div class="buttons">
            <button type="submit" class="btn-primary">Save Changes</button>
            <a href="/restaurants/showRestaurants" class="btn-secondary">Back</a>
          </div>
        </form>
      </div>
    </main>

    <script>
      const form = document.getElementById("editRestaurantForm");
      form.addEventListener("submit", function (e) {
        e.preventDefault();
        Swal.fire({
          icon: "success",
          title: "Updated!",
          text: "Restaurant details saved.",
          timer: 1200,
          showConfirmButton: false
        }).then(() => form.submit());
      });
    </script>
  </body>
</html>
