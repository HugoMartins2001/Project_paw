<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/showRestaurants.css" />
    <title>Available Restaurants</title>
  </head>
  <body>
    <!-- Header -->
    <div class="header bg-primary text-white py-3">
      <div class="container d-flex justify-content-between">
        <h3>Available Restaurants</h3>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>

    <div class="container mt-4">
      <h1 class="mb-4 text-center">Available Restaurants</h1>

      <% if (restaurants.length === 0) { %>
        <div class="alert alert-warning text-center">
          <h3>No restaurants found.</h3>
        </div>
      <% } else { %>
        <div class="row">
          <% restaurants.forEach(function(restaurant) { 
            const isManager = user.role === 'manager' && restaurant.managerId?.toString() === user._id.toString();
            const isAdmin = user.role === 'admin';
            const isCliente = user.role === 'cliente';
            const canView = restaurant.isApproved || isAdmin || isManager || (isCliente && restaurant.isApproved); 
            const cardClass = restaurant.isApproved ? 'success' : 'warning'; 
          %>
            <% if (canView) { %>
              <div class="col-md-6 col-lg-4">
                <div class="card mb-4 shadow-sm border-<%= cardClass %>">
                  <div class="card-body">
                    <h5 class="card-title d-flex justify-content-between align-items-center">
                      <%= restaurant.name %>
                      <% if (!restaurant.isApproved) { %>
                        <span class="badge bg-warning text-dark">Pending</span>
                      <% } %>
                    </h5>
                    <p><strong>Street:</strong> <%= restaurant.address %></p>

                    <div class="d-flex justify-content-between">
                      <% if ((isAdmin && restaurant.isApproved) || isManager || (isCliente && restaurant.isApproved)) { %>
                        <a href="/restaurants/showRestaurant/<%= restaurant.name %>" class="btn btn-info">View Details</a>
                        <% if (isManager || isAdmin) { %>
                          <a class="btn btn-warning" href="/restaurants/editRestaurant/<%= restaurant.name %>">Edit</a>
                          <form action="/restaurants/deleteRestaurant/<%= restaurant.name %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this restaurant?')">
                              Delete
                            </button>
                          </form>
                        <% } %>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          <% }); %>
        </div>
      <% } %>
      <div class="text-center">
        <% if (user.role === 'manager') { %>
          <a href="/restaurants/submitRestaurant" class="btn btn-primary mt-4">Create New Restaurant</a>
        <% } %>
        <a href="/dashboard" class="btn btn-secondary mt-4">Back to Main Page</a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
