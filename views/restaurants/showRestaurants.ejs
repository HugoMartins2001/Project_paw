<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/showRestaurants.css">
    <title>Lista de Restaurantes</title>
</head>
<body>
    <div class="header">
        <span>Lista de Restaurantes</span>
        <a href="/auth/logout">Logout</a>
    </div>

    <div class="container">
        <% if (restaurants.length == 0) { %>
            <div class="no-data">
                <h1>Não foram encontrados restaurantes</h1>
            </div>
        <% } else { %>
            <h1>Restaurantes Disponíveis</h1>
            <% restaurants.forEach(function(restaurant) { %>
                <div class="restaurant">
                    <label>Nome:</label>
                    <p><%= restaurant.name %></p>
                    <label>Descrição:</label>
                    <p><%= restaurant.description %></p>
                    <label>Localização:</label>
                    <p><%= restaurant.address %></p>
                    <label>Contacto:</label>
                    <p><%= restaurant.contact %></p>
                    <a href="/restaurants/showRestaurant/<%= restaurant.name %>">Ver Detalhes</a>
                    <a href="/restaurants/deleteRestaurant/<%= restaurant.name %>">Eliminar</a>
                </div>
            <% }) %>
        <% } %>
        <a href="/" class="btn-back">Voltar à Página Principal</a>
    </div>
</body>
</html>