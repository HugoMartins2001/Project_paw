<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/showRestaurants.css" />
    <title>Menus Disponíveis</title>
  </head>
  <body>
    <div class="header bg-primary text-white py-3">
      <div class="container d-flex justify-content-between">
        <h3>Menus Disponíveis</h3>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>

    <div class="container mt-4">
      <h1 class="mb-4 text-center">Restaurantes Disponíveis</h1>

      <% if (restaurants.length === 0) { %>
        <div class="alert alert-warning text-center">
          <h3>Não foram encontrados restaurantes.</h3>
        </div>
      <% } else { %>
        <div class="row">
          <% restaurants.forEach(function(restaurant) { %>
            <div class="col-md-6 col-lg-4">
              <div class="card mb-4 shadow-sm">
                <div class="card-body">
                  <h5 class="card-title"><%= restaurant.name %></h5>
                  <p><strong>Rua:</strong> <%= restaurant.address %></p>
                  <div class="d-flex justify-content-between">
                    <a href="/restaurants/showRestaurant/<%= restaurant.name %>" class="btn btn-info">Ver Detalhes</a>
                    <% if (user.role === 'manager') { %>
                      <a class="btn btn-warning" href="/restaurants/editRestaurant/<%= restaurant.name %>">Editar</a>
                      <form action="/restaurants/deleteRestaurant/<%= restaurant.name %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir este restaurante?')">
                          Eliminar
                        </button>
                      </form>
                    <% } else if (user.role === 'admin') { %>
                      <a class="btn btn-warning" href="/restaurants/editRestaurant/<%= restaurant.name %>">Editar</a>
                      <a class="btn btn-danger" href="/restaurants/deleteRestaurant/<%= restaurant.name %>">Eliminar</a>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

      <div class="text-center">
        <% if (user.role === 'manager') { %>
          <a href="/restaurants/submitRestaurant" class="btn btn-primary mt-4">Criar Novo Restaurante</a>
        <% } %>
        <a href="/index" class="btn btn-secondary mt-4">Voltar à Página Principal</a>
      </div>
    </div>

    <!-- Bootstrap JS (necessário para o funcionamento dos componentes do Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
