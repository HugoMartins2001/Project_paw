<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/submitRestaurant.css" />
    <title>Inserir Restaurante</title>
  </head>
  <body>
    <h1>Inserir Restaurante</h1>
    <form method="post" action="/restaurants/submittedRestaurant">
      <label for="name">Nome do Restaurante:</label>
      <input type="text" name="name" id="f_name" required />

      <label for="address">Rua:</label>
      <input type="text" name="address" id="f_address" required />

      <label for="latitude">Latitude:</label>
      <input type="text" name="latitude" id="f_latitude" required />

      <label for="longitude">Longitude:</label>
      <input type="text" name="longitude" id="f_longitude" required />

      <label for="phone">Telefone:</label>
      <input type="text" name="phone" id="f_phone" required />

      <label for="email">Email:</label>
      <input type="email" name="email" id="f_email" required />

      <label for="openingHours">Horário de Funcionamento:</label>
      <input type="text" name="openingHours" id="f_openingHours" required />

      <label for="paymentMethods">Métodos de Pagamento:</label>
      <input type="text" name="paymentMethods" id="f_paymentMethods" required />

      <div class="mb-3">
        <label for="menus" class="form-label">Menus:</label>
        <select id="menus" name="menus" class="form-select" multiple>
          <% menus.forEach(function(menu) { %>
            <option value="<%= menu._id %>"><%= menu.name %></option>
        <% }) %>
        </select>
      </div>

      <input type="submit" value="Criar Restaurante" />
    
    </form>

    <div class="dashboard-btn-container">
      <a href="/" class="btn-dashboard">Ir para o Dashboard</a>
    </div>
  </body>
</html>
