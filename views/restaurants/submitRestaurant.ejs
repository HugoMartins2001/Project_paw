<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/submitRestaurant.css" />
    <title>Add Restaurant</title>
  </head>
  <body>
    <div class="header bg-primary text-white py-3">
      <div class="container d-flex justify-content-between">
        <h3>Add Restaurant</h3>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>

    <div class="container mt-5">
      <div class="card p-4 shadow-sm">
        <h2 class="text-center mb-4">New Restaurant</h2>

        <form method="post" action="/restaurants/submittedRestaurant">
          <div class="mb-3">
            <label for="name" class="form-label">Restaurant Name</label>
            <input
              type="text"
              id="f_name"
              name="name"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="address" class="form-label">Street</label>
            <input
              type="text"
              id="f_address"
              name="address"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="latitude" class="form-label">Latitude</label>
            <input
              type="text"
              id="f_latitude"
              name="latitude"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="longitude" class="form-label">Longitude</label>
            <input
              type="text"
              id="f_longitude"
              name="longitude"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input
              type="text"
              id="f_phone"
              name="phone"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
              type="email"
              id="f_email"
              name="email"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="openingHours" class="form-label">Opening Hours</label>
            <input
              type="text"
              id="f_openingHours"
              name="openingHours"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="paymentMethods" class="form-label"
              >Payment Methods</label
            >
            <input
              type="text"
              id="f_paymentMethods"
              name="paymentMethods"
              class="form-control"
              required
            />
          </div>
          <div class="mb-3">
            <label for="menus" class="form-label">Menus</label>
            <select id="menus" name="menus" class="form-select" multiple>
              <% menus.forEach(function(menu) { %>
              <option value="<%= menu._id %>"><%= menu.name %></option>
              <% }) %>
            </select>
            <small class="form-text text-muted"
              >Choose the menus associated with the restaurant.</small
            >
          </div>
          <button type="submit" class="btn btn-primary w-100">
            Create Restaurant
          </button>
        </form>

        <a href="/dashboard" class="btn btn-secondary w-100 mt-3"
          >Go to Dashboard</a
        >
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
