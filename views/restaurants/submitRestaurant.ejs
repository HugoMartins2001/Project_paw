<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New restaurant</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/stylesheets/submitRestaurant.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter&display=swap" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="icon" type="image/png" href="/favicon.png">
  </head>
  <body>
    <%- include('../partials/header') %>

    <div class="container mt-5">
      <div class="card">
        <h2>New Restaurant</h2>

        <form id="restaurantForm" method="post" action="/restaurants/submittedRestaurant">
          <div class="mb-3">
            <label for="name" class="form-label">Restaurant Name</label>
            <input type="text" id="f_name" name="name" class="form-control" required/>
          </div>
          <div class="mb-3">
            <label for="address" class="form-label">Street</label>
            <input type="text" id="f_address" name="address" class="form-control" required/>
          </div>
          <div class="mb-3">
            <label for="latitude" class="form-label">Latitude</label>
            <input type="text" id="f_latitude" name="latitude" class="form-control" required/>
          </div>
          <div class="mb-3">
            <label for="longitude" class="form-label">Longitude</label>
            <input type="text" id="f_longitude" name="longitude"  class="form-control" required/>
          </div>
          <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input type="text" id="f_phone" name="phone" class="form-control" required/>
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="f_email"  name="email" class="form-control" required/>
          </div>
          <div class="mb-3">
            <label for="openingHours" class="form-label">Opening Hours</label>
            <input type="text" id="f_openingHours" name="openingHours" class="form-control" required/>
          </div>
          <div class="mb-3">
            <label for="paymentMethods" class="form-label"
              >Payment Methods</label
            >
            <input type="text" id="f_paymentMethods" name="paymentMethods"  class="form-control" required/>
          </div>
          <div class="mb-3">
            <label for="menus" class="form-label">Menus</label>
            <select id="menus" name="menus" class="form-select" multiple>
              <% menus.forEach(function(menu) { %>
              <option value="<%= menu._id %>"><%= menu.name %></option>
              <% }) %>
            </select>
            <small class="form-text text-muted"
              >Choose the menus associated with the restaurant.</small
            >
          </div>
          <button type="submit" class="btn btn-primary w-100">
            Create Restaurant
          </button>
        </form>

        <a href="/dashboard" class="btn btn-secondary w-100 mt-3">
          Go to Dashboard
        </a>
      </div>
    </div>

    <script
      src="https://kit.fontawesome.com/yourkitid.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      const restaurantForm = document.getElementById("restaurantForm");

      restaurantForm.addEventListener("submit", function (event) {
        event.preventDefault();

        Swal.fire({
          icon: "success",
          title: "Restaurante criado com sucesso!",
          text: "VocÃª serÃ¡ redirecionado para a lista de restaurantes.",
          confirmButtonColor: "#4CAF50",
          timer: 1000, 
          showConfirmButton: false,
        }).then(() => {
          restaurantForm.submit();
        });
      });
    </script>
  </body>
</html>
