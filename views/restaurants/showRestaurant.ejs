<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Restaurant Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/stylesheets/showRestaurant.css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter&display=swap" />
  <link rel="icon" type="image/png" href="/favicon.png">
</head>

<body>
  <%- include('../partials/header') %> 

  <div class="container mt-4">
    <div class="card p-4">
      <% if (!restaurant) { %>
        <div class="alert alert-warning text-center">
          <h3>Restaurant Not Found</h3>
        </div>
      <% } else { %>
        <h2 class="text-center mb-4"><%= restaurant.name %></h2>

        <% if (restaurant.image) { %>
          <div class="text-center mb-4">
            <img src="/uploads/<%= restaurant.image %>" alt="<%= restaurant.name %>" class="img-fluid rounded" style="max-height: 300px;" />
          </div>
        <% } else { %>
          <p class="text-center"><em>No image available for this restaurant.</em></p>
        <% } %>

        <div class="mb-3">
          <p><strong>Street:</strong> <%= restaurant.address %></p>
          <p><strong>Latitude:</strong> <%= restaurant.latitude %></p>
          <p><strong>Longitude:</strong> <%= restaurant.longitude %></p>
          <p><strong>Phone:</strong> <%= restaurant.phone %></p>
          <p><strong>Email:</strong> <%= restaurant.email %></p>
          <p><strong>Opening Hours:</strong> <%= restaurant.openingHours %></p>
          <p><strong>Payment Methods:</strong> <%= restaurant.paymentMethods %></p>
        </div>

        <h5 class="mt-4">Available Menus:</h5>
        <% if (restaurant.menus && restaurant.menus.length > 0) { %>
          <ul class="list-group mb-3">
            <% restaurant.menus.forEach(function(menu) { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <%= menu.name %>
                <a href="/menus/showMenu/<%= menu._id %>" class="btn btn-outline-primary btn-sm">View Details</a>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p><em>This restaurant has no menus associated yet.</em></p>
        <% } %>

        <div class="text-center mt-4">
          <a href="/restaurants/showRestaurants" class="btn btn-secondary">Back to Restaurant List</a>
        </div>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
