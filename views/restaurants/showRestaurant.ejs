<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/showRestaurante.css" />
    <title>Detalhes do Restaurante</title>
  </head>
  <body>
    <div class="header bg-primary text-white py-3">
      <div class="container d-flex justify-content-between">
        <h3>Detalhes do Restaurante</h3>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>

    <!-- Conteúdo principal -->
    <div class="container mt-5">
      <% if (!restaurant) { %>
        <div class="alert alert-warning text-center">
          <h3>Restaurante não encontrado</h3>
        </div>
      <% } else { %>
        <h1 class="text-center mb-4"><%= restaurant.name %></h1>
        <div class="details-card card p-4 shadow-sm">
          <h4>Detalhes do Restaurante</h4>
          <p><strong>Rua:</strong> <%= restaurant.address %></p>
          <p><strong>Latitude:</strong> <%= restaurant.latitude %></p>
          <p><strong>Longitude:</strong> <%= restaurant.longitude %></p>
          <p><strong>Telefone:</strong> <%= restaurant.phone %></p>
          <p><strong>Email:</strong> <%= restaurant.email %></p>
          <p><strong>Horário de Funcionamento:</strong> <%= restaurant.openingHours %></p>
          <p><strong>Métodos de Pagamento:</strong> <%= restaurant.paymentMethods %></p>

          <h5 class="mt-4">Menus Disponíveis:</h5>
          <% if (restaurant.menus && restaurant.menus.length > 0) { %>
            <ul>
              <% restaurant.menus.forEach(function(menu) { %>
                <li><%= menu.name %></li>
              <% }) %>
            </ul>
          <% } else { %>
            <p>Este restaurante ainda não tem menus associados.</p>
          <% } %>
        </div>
      <% } %>
    </div>

    <!-- Botão de voltar -->
    <div class="text-center mt-4">
      <a href="/restaurants/showRestaurants" class="btn btn-secondary">Voltar à Lista de Restaurantes</a>
    </div>
  </body>
</html>
