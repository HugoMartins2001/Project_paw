<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Approve Restaurants</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="icon" type="image/png" href="/favicon.png">
  </head>
  <body>
    <div class="header bg-primary text-white py-3">
      <div class="container d-flex justify-content-between align-items-center">
        <h3>Restaurants Pending Approval</h3>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>

    <div class="container mt-5">
      <h2 class="mb-4 text-center">Pending Restaurant List</h2>

      <% if (restaurants.length === 0) { %>
      <div class="alert alert-success text-center">
        <h4>No restaurants pending approval.</h4>
      </div>
      <% } else { %>
      <div class="row">
        <% restaurants.forEach(function(restaurant) { %>
        <div class="col-md-6 col-lg-4">
          <div class="card mb-4 shadow-sm border-warning">
            <div class="card-body">
              <h5 class="card-title"><%= restaurant.name %></h5>
              <p><strong>Street:</strong> <%= restaurant.address %></p>
              <p><strong>Email:</strong> <%= restaurant.email %></p>
              <p><strong>Phone:</strong> <%= restaurant.phone %></p>

              <form class="approve-form" action="/restaurants/approveRestaurant/<%= restaurant._id %>" method="POST">
                <button type="submit" class="btn btn-success w-100"> Approve Restaurant</button>
              </form>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } %>

      <div class="text-center mt-4">
        <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
      </div>
    </div>

    <script>
      const approveForms = document.querySelectorAll('.approve-form');

      approveForms.forEach(form => {
        form.addEventListener('submit', function (event) {
          event.preventDefault(); 

          Swal.fire({
            icon: 'success',
            title: 'Restaurante aprovado com sucesso!',
            text: 'A página será atualizada.',
            confirmButtonColor: '#4CAF50',
            timer: 1000, 
            showConfirmButton: false,
          }).then(() => {
            form.submit();
          });
        });
      });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
