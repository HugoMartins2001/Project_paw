<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Aprovar Restaurantes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="header bg-primary text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h3>Restaurantes por Aprovar</h3>
            <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <div class="container mt-5">
        <h2 class="mb-4 text-center">Lista de Restaurantes Pendentes</h2>

        <% if (restaurants.length === 0) { %>
            <div class="alert alert-success text-center">
                <h4>Não há restaurantes pendentes de aprovação.</h4>
            </div>
        <% } else { %>
            <div class="row">
                <% restaurants.forEach(function(restaurant) { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card mb-4 shadow-sm border-warning">
                            <div class="card-body">
                                <h5 class="card-title"><%= restaurant.name %></h5>
                                <p><strong>Rua:</strong> <%= restaurant.address %></p>
                                <p><strong>Email:</strong> <%= restaurant.email %></p>
                                <p><strong>Telefone:</strong> <%= restaurant.phone %></p>

                                <form action="/restaurants/approveRestaurant/<%= restaurant._id %>" method="POST">
                                    <button type="submit" class="btn btn-success w-100">Aprovar Restaurante</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <div class="text-center mt-4">
            <a href="/index" class="btn btn-secondary">Voltar ao Dashboard</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
