                      "description": { "type": "string" },
                      "category": { "type": "string" },
                      "ingredients": {
                        "type": "array",
                        "items": { "type": "string" }
                      },
                      "prices": {
                        "type": "object",
                        "properties": {
                          "pequena": { "type": "number" },
