<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registo de Utilizador</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/createUser.css">
</head>

<body>
  <div class="register-container">
    <h1 class="mb-4">Registo de Utilizador</h1>
    <form method="post" action="/auth/registerSubmitted">
        <div class="mb-3">
            <label for="role" class="form-label">Função</label>
            <select class="form-select text-white bg-dark" id="role" name="role" required onchange="toggleForm()">
                <option value="cliente">Cliente</option>
                <option value="manager">Manager</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Nome</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Digite o seu nome" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Digite o seu email" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Digite a sua password" required>
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirmar Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirme a sua password" required>
        </div>
        

        <!-- Campos específicos para Cliente -->
        <div id="cliente-fields" class="hidden">
            <div class="mb-3">
                <label for="clienteTelemovel" class="form-label">Telemóvel</label>
                <input type="text" id="clienteTelemovel" name="clienteTelemovel" class="form-control" placeholder="Número de telemóvel" pattern="[0-9]{9}" title="O número deve ter 9 dígitos">
            </div>
            <div class="mb-3">
                <label for="clienteNif" class="form-label">NIF</label>
                <input type="text" id="clienteNif" name="clienteNif" class="form-control" placeholder="Número de Contribuinte" pattern="[0-9]{9}" title="O NIF deve ter 9 dígitos">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Endereço</label>
                <input type="text" id="address" name="address" class="form-control" placeholder="Digite o endereço">
            </div>
        </div>

        <!-- Campos específicos para Manager -->
        <div id="manager-fields" class="hidden">
            <div class="mb-3">
                <label for="managerTelemovel" class="form-label">Telemóvel</label>
                <input type="text" id="managerTelemovel" name="managerTelemovel" class="form-control" placeholder="Número de telemóvel" pattern="[0-9]{9}" title="O número deve ter 9 dígitos">
            </div>
            <div class="mb-3">
                <label for="managerNif" class="form-label">NIF</label>
                <input type="text" id="managerNif" name="managerNif" class="form-control" placeholder="Número de Contribuinte" pattern="[0-9]{9}" title="O NIF deve ter 9 dígitos">
            </div>
        </div>

        <button type="submit" class="btn btn-register w-100">Registar</button>
    </form>
    <p class="mt-3">Já tem conta? <a href="/auth/login">Faça login</a></p>
  </div>

  <script>
    function toggleForm() {
        const role = document.getElementById('role').value;
        const clienteFields = document.getElementById('cliente-fields');
        const managerFields = document.getElementById('manager-fields');

        if (role === 'cliente') {
            clienteFields.classList.remove('hidden');
            managerFields.classList.add('hidden');
        } else if (role === 'manager') {
            managerFields.classList.remove('hidden');
            clienteFields.classList.add('hidden');
        }
    }

    // Inicializa o formulário com os campos corretos
    toggleForm();
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>