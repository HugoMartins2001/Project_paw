<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registo de Utilizador</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
        background-image: url('https://media2.giphy.com/media/v1.Y2lkPTc5MGI3NjExYjlmOWZhczcwMW41ZTl1cDRoczIxYjFncnhhOHU1cDQ0b2t5NzRmOCZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/uFmH8za4E6M5STIiTu/giphy.gif');
        background-repeat: no-repeat;
        background-position: center center;
        background-size: cover;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }
    .register-container {
        background: rgba(0, 0, 0, 0.8);
        padding: 30px;
        border-radius: 10px;
        text-align: center;
        color: #fff;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }
    .form-control {
        background: transparent;
        border: 1px solid #fff;
        color: #fff;
    }
    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.7);
    }
    .btn-register {
        background-color: #ff8800;
        border: none;
        transition: 0.3s;
    }
    .btn-register:hover {
        background-color: #cc7000;
    }
    a {
        color: #ffbb33;
    }
    label {
        display: block;
        margin-bottom: 5px;
        text-align: left;
    }
    .hidden {
        display: none;
    }
    @media (max-width: 768px) {
        .register-container {
            padding: 20px;
        }
        body {
            padding: 10px;
        }
    }
  </style>
</head>

<body>
  <div class="register-container">
    <h1 class="mb-4">Registo de Utilizador</h1>
    <form method="post" action="/auth/registerSubmitted">
        <div class="mb-3">
            <label for="name" class="form-label">Nome</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Digite o seu nome" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Digite o seu email" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Digite a sua password" required>
        </div>
        <div class="mb-3">
            <label for="role" class="form-label">Função</label>
            <select class="form-select text-white bg-dark" id="role" name="role" required onchange="toggleForm()">
                <option value="cliente">Cliente</option>
                <option value="manager">Manager</option>
            </select>
        </div>

        <!-- Campos específicos para Cliente -->
        <div id="cliente-fields" class="hidden">
            <div class="mb-3">
                <label for="telemovel" class="form-label">Telemóvel</label>
                <input type="text" id="telemovel" name="telemovel" class="form-control" placeholder="Número de telemóvel" pattern="[0-9]{9}" title="O número deve ter 9 dígitos">
            </div>
            <div class="mb-3">
                <label for="nif" class="form-label">NIF</label>
                <input type="text" id="nif" name="nif" class="form-control" placeholder="Número de Contribuinte" pattern="[0-9]{9}" title="O NIF deve ter 9 dígitos">
            </div>
        </div>

        <!-- Campos específicos para Manager -->
        <div id="manager-fields" class="hidden">
            <div class="mb-3">
                <label for="department" class="form-label">Departamento</label>
                <input type="text" id="department" name="department" class="form-control" placeholder="Digite o departamento">
            </div>
            <div class="mb-3">
                <label for="manager-code" class="form-label">Código de Manager</label>
                <input type="text" id="manager-code" name="managerCode" class="form-control" placeholder="Digite o código de manager">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Localização</label>
                <input type="text" id="address" name="address" class="form-control" placeholder="Digite a localização">
            </div>
            <div class="mb-3">
                <label for="postalCode" class="form-label">Código postal</label>
                <input type="text" id="postalCode" name="postalCode" class="form-control" placeholder="Digite o código postal" pattern="[0-9]{4}-[0-9]{3}" title="O código postal deve ter o formato 1234-567">
            </div>
            <div class="mb-3">
                <label for="city" class="form-label">Cidade</label>
                <input type="text" id="city" name="city" class="form-control" placeholder="Digite a cidade">
            </div>
        </div>

        <button type="submit" class="btn btn-register w-100">Registar</button>
    </form>
    <p class="mt-3">Já tem conta? <a href="/auth/login">Faça login</a></p>
  </div>

  <script>
    function toggleForm() {
        const role = document.getElementById('role').value;
        const clienteFields = document.getElementById('cliente-fields');
        const managerFields = document.getElementById('manager-fields');

        if (role === 'cliente') {
            clienteFields.classList.remove('hidden');
            managerFields.classList.add('hidden');
        } else if (role === 'manager') {
            managerFields.classList.remove('hidden');
            clienteFields.classList.add('hidden');
        }
    }

    // Inicializa o formulário com os campos corretos
    toggleForm();
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>