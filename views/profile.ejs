<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <title>Perfil</title>
  </head>
  <body>
    <!-- Cabeçalho -->
    <div class="header bg-primary text-white py-3">
      <div class="container d-flex justify-content-between align-items-center">
        <span>Bem-vindo, <%= user.name %></span>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>

    <!-- Conteúdo do perfil -->
    <div class="container mt-5">
      <h2 class="text-center mb-4">Perfil do <%= user.name %></h2>

      <div class="profile-container">
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Função:</strong> <%= user.role === 'cliente' ? 'Cliente' : user.role === 'admin' ? 'Administrador' : 'Manager' %></p>

        <% if (user.role === 'cliente') { %>
          <div class="section-title mt-4"><strong>Informações de Cliente</strong></div>
          <p><strong>Telemóvel:</strong> <%= user.clienteTelemovel || 'Não fornecido' %></p>
          <p><strong>NIF:</strong> <%= user.clienteNif || 'Não fornecido' %></p>
          <p><strong>Endereço:</strong> <%= user.address || 'Não fornecido' %></p>
        <% } else if (user.role === 'manager') { %>
          <div class="section-title mt-4"><strong>Informações de Manager</strong></div>
          <p><strong>Telemóvel:</strong> <%= user.managerTelemovel || 'Não fornecido' %></p>
        <% } else if (user.role === 'admin') {%>
          <div class="section-title mt-4"><strong>Informações de Administrador</strong></div>
          <p><strong>Telemóvel:</strong> <%= user.managerTelemovel || 'Não fornecido' %></p>
          <p><strong>Endereço:</strong> <%= user.address || 'Não fornecido' %></p>
        <% } %>

        <!-- Botão para voltar à página principal -->
        <div class="text-center mt-4">
          <a href="/index" class="btn btn-primary">Página Principal</a>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS (necessário para o funcionamento dos componentes do Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
