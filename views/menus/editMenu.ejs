<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/editMenu.css">
    <title>Editar Menu</title>
</head>
<body>
    <!-- Cabeçalho -->
    <div class="header bg-primary text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h3>Editar Menu</h3>
            <!-- Botão de Logout com o estilo correto -->
            <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <!-- Conteúdo principal -->
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Editar Menu</h1>

        <form action="/menus/editMenu/<%= menu._id %>" method="POST">
            <!-- Campo de Nome do Menu -->
            <div class="mb-3">
                <label for="name" class="form-label">Nome do Menu:</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= menu.name %>" required>
            </div>

            <!-- Campo de Seleção de Pratos com Dropdown -->
            <div class="mb-3">
                <label for="dishes" class="form-label">Selecione os Pratos:</label>
                <select name="dishes" id="dishes" class="form-select" multiple required>
                    <% dishes.forEach(function(dish) { %>
                        <option value="<%= dish._id %>"
                            <%= menu && menu.dishes.some(d => d._id.toString() === dish._id.toString()) ? 'selected' : '' %>>
                            <%= dish.name %> - <%= dish.price %>€
                        </option>
                    <% }) %>
                </select>
                <small class="form-text text-muted">Selecione múltiplos pratos segurando a tecla "Ctrl" (Windows) ou "Cmd" (Mac).</small>
            </div>

            <!-- Botão para Enviar -->
            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-primary">Guardar Alterações</button>
            </div>
        </form>

        <!-- Botão para voltar à lista de menus -->
        <div class="text-center mt-4">
            <a href="/menus/showMenus" class="btn btn-secondary">Voltar à Lista de Menus</a>
        </div>
    </div>

    <!-- Adicionando o script do Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
