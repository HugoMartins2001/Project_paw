<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/editMenu.css">
    <title>Edit Menu</title>
</head>
<body>
    <!-- Header -->
    <div class="header bg-primary text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h3>Edit Menu</h3>
            <!-- Properly styled Logout button -->
            <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Edit Menu</h1>

        <form action="/menus/editMenu/<%= menu._id %>" method="POST">
            <!-- Menu Name Field -->
            <div class="mb-3">
                <label for="name" class="form-label">Menu Name:</label>
                <input type="text" name="name" id="name" class="form-control" value="<%= menu.name %>" required>
            </div>

            <!-- Dish Selection Field with Dropdown -->
            <div class="mb-3">
                <label for="dishes" class="form-label">Select Dishes:</label>
                <select name="dishes" id="dishes" class="form-select" multiple required>
                    <% dishes.forEach(function(dish) { %>
                        <option value="<%= dish._id %>"
                            <%= menu && menu.dishes.some(d => d._id.toString() === dish._id.toString()) ? 'selected' : '' %>>
                            <%= dish.name %> - <%= dish.price %>â‚¬
                        </option>
                    <% }) %>
                </select>
                <small class="form-text text-muted">Hold "Ctrl" (Windows) or "Cmd" (Mac) to select multiple dishes.</small>
            </div>

            <!-- Submit Button -->
            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>

        <!-- Back to Menu List Button -->
        <div class="text-center mt-4">
            <a href="/menus/showMenus" class="btn btn-secondary">Back to Menu List</a>
        </div>
    </div>

    <!-- Bootstrap Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
