<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/showMenu.css" />
    <title>Detalhes do Menu</title>
  </head>
  <body>
    <div class="header bg-primary text-white py-3">
      <div class="container d-flex justify-content-between">
        <h3>Detalhes do Menu</h3>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>

    <div class="container mt-5">
      <% if (!menu) { %>
        <div class="alert alert-danger text-center">
          <h3>Menu não encontrado</h3>
        </div>
      <% } else { %>
        <div class="menu-details card p-4 shadow-sm">
          <h2 class="text-center mb-4"><%= menu.name %></h2>
          <p><strong>Nome do Menu:</strong> <%= menu.name %></p>
          <h4>Pratos:</h4>
          <% if (menu.dishes && menu.dishes.length > 0) { %>
            <ul class="list-group">
              <% menu.dishes.forEach(function(dish) { %>
                <li class="list-group-item">
                  <strong>Nome: <%= dish.name %></strong> - <br>
                  <strong>Doses: </strong>
                  <% if (dish.prices) { %>
                      Pequena: €<%= dish.prices.pequena.toFixed(2) %> | 
                      Média: €<%= dish.prices.media.toFixed(2) %> | 
                      Grande: €<%= dish.prices.grande.toFixed(2) %>
                  <% } else { %>
                      <span>Preço não disponível</span>
                  <% } %>
                  <p><em>Descrição: <%= dish.description || 'Sem descrição disponível' %></em></p>
                  <a href="/dishes/showDish/<%= dish._id %>" class="btn btn-info">Ver Detalhes</a>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p>Este menu ainda não tem pratos associados.</p>
          <% } %>
        </div>
      <% } %>
    </div>

    <div class="text-center mt-4">
      <a href="/menus/showMenus" class="btn btn-secondary">Voltar à Lista de Menus</a>
    </div>
  </body>
</html>
