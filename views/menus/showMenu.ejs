<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/showMenu.css" />
  <link rel="icon" type="image/png" href="/favicon.png">
  <title>Menu Details</title>
</head>

<body>
  <%- include('../partials/header') %> 

  <div class="container">
    <% if (!menu) { %>
      <div class="menu-details">
        <h2>Menu Not Found</h2>
      </div>
    <% } else { %>
      <div class="menu-details">

        <% if (menu.menuPic) { %>
          <div class="menu-image-container">
            <img src="/uploads/<%= menu.menuPic %>" alt="<%= menu.name %>" class="menu-image" />
          </div>
        <% } else { %>
          <p><em>No image available for this menu.</em></p>
        <% } %>

        <p><strong>Menu Name:</strong> <%= menu.name %></p>
        <h4>Dishes:</h4>

        <% if (menu.dishes && menu.dishes.length > 0) { %>
          <ul class="list-group">
            <% menu.dishes.forEach(function(dish) { %>
              <li class="list-group-item">
                <strong>Name: <%= dish.name %></strong><br />
                <strong>Portions:</strong>
                <% if (dish.prices) { %>
                  Small: €<%= dish.prices.pequena.toFixed(2) %> |
                  Medium: €<%= dish.prices.media.toFixed(2) %> |
                  Large: €<%= dish.prices.grande.toFixed(2) %>
                <% } else { %>
                  <span>Price not available</span>
                <% } %>
                <p><em>Description: <%= dish.description || 'No description available' %></em></p>
                <a href="/dishes/showDish/<%= dish._id %>" class="btn btn-info mt-2">View Details</a>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>This menu has no dishes associated yet.</p>
        <% } %>
      </div>
    <% } %>
  </div>

  <div class="text-center">
    <a href="/menus/showMenus" class="btn btn-secondary">Back to Menu List</a>
  </div>
</body>

</html>
