<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/showMenu.css">
    <title>Detalhes do Menu</title>
</head>
<body>
    <div class="header">
        <span>Detalhes do Menu</span>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
    </div>

    <div class="container">
        <% if (!menu) { %>
            <div class="alert alert-danger text-center">
                <h1>Menu não encontrado</h1>
            </div>
        <% } else { %>
            <div class="menu-details">
                <h2><%= menu.name %></h2>
                <p><strong>Restaurante:</strong> <%= menu.restaurantId.name %></p>
                <p><strong>Pratos:</strong></p>
                <ul class="dish-list">
                    <% menu.dishes.forEach(function(dish) { %>
                        <li class="dish-item">
                            <strong><%= dish.name %></strong> - €<%= dish.price.toFixed(2) %>
                            <p><em><%= dish.description || 'Sem descrição disponível' %></em></p>
                        </li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
    </div>

    <div class="actions text-center">
        <a href="/menus/showMenus" class="btn btn-secondary btn-back">Voltar à Lista de Menus</a>
    </div>
</body>
</html>