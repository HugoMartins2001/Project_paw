<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Available Menus</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/stylesheets/showMenus.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter&display=swap" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body>
    <div class="header">
      <h3>Available Menus</h3>
      <form action="/auth/logout" method="POST">
        <button type="submit" class="btn logout-btn">Logout</button>
      </form>
    </div>

    <div class="container">
      <h1>Available Menus</h1>

      <% if (menus.length === 0) { %>
        <div class="alert alert-warning text-center">
          <h3>No menus found.</h3>
        </div>
      <% } else { %>
        <div class="row g-4">
          <% menus.forEach(function(menu) { 
            const isManagerMenu = menu.managerId && user.role === 'manager' &&
              menu.managerId.toString() === user._id.toString(); 
          %>
            <% if (user.role === 'admin' || isManagerMenu) { %>
              <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                  <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title"><%= menu.name %></h5>
                    <div class="d-flex justify-content-between mt-3">
                      <a href="/menus/showMenu/<%= menu._id %>" class="btn btn-info">View</a>
                      <% if (user.role === 'admin' || isManagerMenu) { %>
                        <a href="/menus/editMenu/<%= menu._id %>" class="btn btn-warning">Edit</a>
                        <button class="btn btn-danger delete-menu-btn" data-menu-id="<%= menu._id %>">Delete</button>
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            <% } %>
          <% }) %>
        </div>
      <% } %>

      <div class="text-center mt-5">
        <% if (user.role === 'manager') { %>
          <a href="/menus/submitMenu" class="btn btn-info me-2">Create New Menu</a>
        <% } %>
        <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
      </div>
    </div>

    <script>
      document.querySelectorAll('.delete-menu-btn').forEach(button => {
        button.addEventListener('click', function () {
          const menuId = this.getAttribute('data-menu-id');

          Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#ef4444',
            cancelButtonColor: '#6b7280',
            confirmButtonText: 'Yes, delete it!'
          }).then((result) => {
            if (result.isConfirmed) {
              fetch(`/menus/deleteMenu/${menuId}`, {
                method: 'POST'
              }).then(response => {
                if (response.ok) {
                  Swal.fire({
                    icon: 'success',
                    title: 'Deleted!',
                    text: 'The menu has been deleted.',
                    timer: 1500,
                    showConfirmButton: false
                  }).then(() => window.location.reload());
                } else {
                  Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Failed to delete the menu.'
                  });
                }
              });
            }
          });
        });
      });
    </script>
  </body>
</html>
