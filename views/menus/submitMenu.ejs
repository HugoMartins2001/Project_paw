<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/submitMenu.css">
    <title>Criar Menu</title>
</head>
<body>
    <div class="header">
        <span>Criar Menu</span>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
    </div>

    <div class="container mt-5">
        <h1 class="mb-4">Criar Menu</h1>
        <form method="post" action="/menus/submittedMenu">
            <div class="mb-3">
                <label for="name" class="form-label">Nome do Menu</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="restaurantId" class="form-label">Restaurante</label>
                <select id="restaurantId" name="restaurantId" class="form-select" required>
                    <% restaurants.forEach(function(restaurant) { %>
                        <option value="<%= restaurant._id %>"><%= restaurant.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="dishes" class="form-label">Pratos</label>
                <select id="dishes" name="dishes" class="form-select" multiple>
                    <% dishes.forEach(function(dish) { %>
                        <option value="<%= dish._id %>"><%= dish.name %></option>
                    <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Criar Menu</button>
        </form>
        <div class="text-center">
            <a href="/menus/showMenus" class="btn btn-secondary btn-back">Voltar</a>
        </div>
    </div>
</body>
</html>