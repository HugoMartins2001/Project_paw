<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/submitMenu.css">
    <title>Criar Menu</title>
</head>
<body>
    <div class="header bg-primary text-white py-3">
        <div class="container d-flex justify-content-between">
            <h3>Criar Menu</h3>
            <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <div class="container mt-5">
        <div class="card p-4 shadow-sm">
            <h2 class="text-center mb-4">Novo Menu</h2>

            <!-- Alerta de erro (inicialmente oculto) -->
            <div id="error-alert" class="alert alert-danger alert-dismissible fade show d-none text-center" role="alert">
                ⚠️ Você não pode selecionar mais de 10 pratos para o menu!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

            <form id="menuForm" method="post" action="/menus/submittedMenu">
                <div class="mb-3">
                    <label for="name" class="form-label">Nome do Menu</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Digite o nome do menu" required>
                </div>
                <div class="mb-3">
                    <label for="dishes" class="form-label">Pratos</label>
                    <select id="dishes" name="dishes" class="form-select" multiple required>
                        <% dishes.forEach(function(dish) { %>
                            <option value="<%= dish._id %>"><%= dish.name %></option>
                        <% }) %>
                    </select>
                    <small class="form-text text-muted">Escolha até 10 pratos para este menu.</small>
                </div>
                <button type="submit" class="btn btn-primary w-100">Criar Menu</button>
            </form>

            <a href="/index" class="btn btn-secondary w-100 mt-3">Voltar</a>
        </div>
    </div>

    <!-- Bootstrap JS (necessário para o alerta e o botão de fechar) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById("menuForm").addEventListener("submit", function (event) {
            // Obtém os pratos selecionados
            const selectedDishes = document.getElementById("dishes").selectedOptions;

            // Verifica se o número de pratos selecionados é maior que 10
            if (selectedDishes.length > 10) {
                // Previne o envio do formulário
                event.preventDefault();

                // Exibe o alerta de erro
                const errorAlert = document.getElementById("error-alert");
                errorAlert.classList.remove("d-none");
                errorAlert.classList.add("show"); // Garante que o alerta será visível

                // Atraso para desaparecer o alerta após 5 segundos (ajuste se necessário)
                setTimeout(() => {
                    errorAlert.classList.remove("show");
                    errorAlert.classList.add("d-none");
                }, 5000);
            }
        });
    </script>
</body>
</html>
