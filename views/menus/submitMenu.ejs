<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/submitMenu.css">
    <title>Create Menu</title>
</head>
<body>
    <div class="header bg-primary text-white py-3">
        <div class="container d-flex justify-content-between">
            <h3>Create Menu</h3>
            <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <div class="container mt-5">
        <div class="card p-4 shadow-sm">
            <h2 class="text-center mb-4">New Menu</h2>

            <!-- Error Alert (initially hidden) -->
            <div id="error-alert" class="alert alert-danger alert-dismissible fade show d-none text-center" role="alert">
                ⚠️ You cannot select more than 10 dishes for the menu!
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

            <form id="menuForm" method="post" action="/menus/submittedMenu">
                <div class="mb-3">
                    <label for="name" class="form-label">Menu Name</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="Enter the menu name" required>
                </div>
                <div class="mb-3">
                    <label for="dishes" class="form-label">Dishes</label>
                    <select id="dishes" name="dishes" class="form-select" multiple required>
                        <% dishes.forEach(function(dish) { %>
                            <option value="<%= dish._id %>"><%= dish.name %></option>
                        <% }) %>
                    </select>
                    <small class="form-text text-muted">Choose up to 10 dishes for this menu.</small>
                </div>
                <button type="submit" class="btn btn-primary w-100">Create Menu</button>
            </form>

            <a href="/dashboard" class="btn btn-secondary w-100 mt-3">Back</a>
        </div>
    </div>

    <!-- Bootstrap JS (required for the alert and close button) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById("menuForm").addEventListener("submit", function (event) {
            // Get selected dishes
            const selectedDishes = document.getElementById("dishes").selectedOptions;
            
            if (selectedDishes.length > 10) {
                event.preventDefault();

                // Display the error alert
                const errorAlert = document.getElementById("error-alert");
                errorAlert.classList.remove("d-none");
                errorAlert.classList.add("show"); // Ensure the alert is visible

                // Delay to hide the alert after 5 seconds (adjust if necessary)
                setTimeout(() => {
                    errorAlert.classList.remove("show");
                    errorAlert.classList.add("d-none");
                }, 5000);
            }
        });
    </script>
</body>
</html>
