<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/showUsers.css">
    <title>Lista de Utilizadores</title>
</head>
<body>
    <!-- Header fixo -->
    <div class="header bg-primary text-white py-3">
        <div class="container d-flex justify-content-between">
            <h3>Utilizadores Registados</h3>
            <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <div class="container mt-4">
        <h1 class="mb-4 text-center">Utilizadores Registados</h1>

        <% if (users.length === 0) { %>
            <div class="alert alert-warning text-center">
                <h3>Não foram encontrados utilizadores.</h3>
            </div>
        <% } else { %>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Função</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>

        <div class="text-center">
            <a href="/index" class="btn btn-secondary mt-4">Voltar à Página Principal</a>
        </div>
    </div>

