<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Dish</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/stylesheets/submitDishes.css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter&display=swap" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
  <div class="header">
    <h3>Create Dish</h3>
    <a href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
  </div>

  <div class="container">
    <div class="card">
      <h2>New Dish</h2>
      <form id="dishForm" method="post" action="/dishes/submittedDish" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="name" class="form-label">Dish Name</label>
          <input type="text" id="name" name="name" class="form-control" required />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea id="description" name="description" class="form-control" rows="3" required></textarea>
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select id="category" name="category" class="form-select" required>
            <option value="carne">Meat</option>
            <option value="peixe">Fish</option>
            <option value="sobremesa">Dessert</option>
            <option value="vegetariano">Vegetarian</option>
          </select>
        </div>
        <div class="mb-3">
          <label for="ingredients" class="form-label">Ingredients (comma-separated)</label>
          <input type="text" id="ingredients" name="ingredients" class="form-control" required />
        </div>
        <div class="mb-3">
          <label for="priceSmall" class="form-label">Price (Small):</label>
          <input type="number" id="priceSmall" name="prices[pequena]" class="form-control" step="0.01" required>
        </div>

        <div class="mb-3">
          <label for="priceMedium" class="form-label">Price (Medium):</label>
          <input type="number" id="priceMedium" name="prices[media]" class="form-control" step="0.01" required>
        </div>

        <div class="mb-3">
          <label for="priceLarge" class="form-label">Price (Large):</label>
          <input type="number" id="priceLarge" name="prices[grande]" class="form-control" step="0.01" required>
        </div>
        <div class="mb-3">
          <label for="allergens" class="form-label">Allergens (comma-separated)</label>
          <input type="text" id="allergens" name="allergens" class="form-control" />
        </div>
        <div class="mb-3">
          <label for="dishImage" class="form-label">Dish Image</label>
          <input type="file" id="dishImage" name="dishImage" class="form-control" accept="image/*" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Create Dish</button>
      </form>

      <div class="mt-4">
        <a href="/dashboard" class="btn btn-secondary w-100">Back</a>
      </div>
    </div>
  </div>

  <script src="https://kit.fontawesome.com/yourkitid.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const dishForm = document.getElementById('dishForm');

    dishForm.addEventListener('submit', function (event) {
      event.preventDefault();

      Swal.fire({
        icon: 'success',
        title: 'Prato criado com sucesso!',
        text: 'Você será redirecionado para a lista de pratos.',
        confirmButtonColor: '#4CAF50',
        timer: 1000,
        showConfirmButton: false,
      }).then(() => {
        dishForm.submit();
      });
    });
  </script>
</body>
</html>
