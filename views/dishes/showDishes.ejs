<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/showDishes.css">
    <title>Pratos Disponíveis</title>
</head>
<body>
    <div class="header">
        <span>Pratos Disponíveis</span>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
    </div>

    <div class="container mt-4">
        <% if (dishes.length === 0) { %>
            <div class="alert alert-warning text-center">
                <h1>Nenhum prato encontrado.</h1>
            </div>
        <% } else { %>
            <div class="row">
                <% dishes.forEach(function(dish) { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h5 class="card-title"><%= dish.name %></h5>
                                <p class="card-text"><strong>Descrição:</strong> <%= dish.description %></p>
                                <p class="card-text"><strong>Preço:</strong> €<%= dish.price.toFixed(2) %></p>
                                <p class="card-text"><strong>Categoria:</strong> <%= dish.category %></p>
                                <a href="/dishes/deleteDish/<%= dish._id %>" class="btn btn-danger">Eliminar</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
        <div class="text-center">
            <a href="/dishes/createDish" class="btn btn-primary mt-4">Criar Novo Prato</a>
            <a href="/" class="btn btn-secondary mt-4">Voltar à Página Principal</a>
        </div>
    </div>
</body>
</html>