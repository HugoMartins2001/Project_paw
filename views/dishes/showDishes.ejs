<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Available Dishes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/stylesheets/showDishes.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter&display=swap" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="icon" type="image/png" href="/favicon.png">
  </head>

  <body>
    <%- include('../partials/header') %> 

    <div class="container">
      <h1 class="text-center text-primary my-5 text-dark">Available Dishes</h1>

      <% if (dishes.length === 0) { %>
        <div class="alert alert-warning text-center">
          <h3>No dishes found.</h3>
        </div>
      <% } else { %>
        <div class="row g-4">
          <% dishes.forEach(function(dish) { %>
            <div class="col-md-6 col-lg-4">
              <div class="card h-100 p-3">
                <h5 class="card-title text-center text-dark"><%= dish.name %></h5>
                <p><strong>Description:</strong> <%= dish.description %></p>
                <p><strong>Price:</strong><br>
                  <strong>Small:</strong> €<%= dish.prices.pequena.toFixed(2) %><br>
                  <strong>Medium:</strong> €<%= dish.prices.media.toFixed(2) %><br>
                  <strong>Large:</strong> €<%= dish.prices.grande.toFixed(2) %>
                </p>
                <p><strong>Category:</strong> <%= dish.category %></p>

                <div class="d-flex justify-content-between mt-3">
                  <a href="/dishes/showDish/<%= dish._id %>" class="btn btn-outline-primary">View Details</a>
                  <% if ((user.role === 'Manager' && dish.managerId.toString() === user._id.toString()) || user.role === 'Admin') { %>
                    <a href="/dishes/editDish/<%= dish._id %>" class="btn btn-outline-secondary">Edit</a>
                    <button class="btn btn-outline-danger delete-dish-btn" data-dish-id="<%= dish._id %>">Delete</button>
                  <% } %>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>

      <div class="text-center mt-5">
        <% if (user.role === 'Manager' || user.role === 'Admin') { %>
          <a href="/dishes/submitDishes" class="btn btn-info me-2">Create New Dish</a>
        <% } %>
        <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
      </div>
    </div>

    <script src="https://kit.fontawesome.com/yourkitid.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.querySelectorAll('.delete-dish-btn').forEach(button => {
        button.addEventListener('click', function () {
          const dishId = this.getAttribute('data-dish-id');
          Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#ef4444',
            cancelButtonColor: '#6b7280',
            confirmButtonText: 'Yes, delete it!'
          }).then((result) => {
            if (result.isConfirmed) {
              fetch(`/dishes/deleteDish/${dishId}`, {
                method: 'POST'
              }).then(response => {
                if (response.ok) {
                  Swal.fire({
                    icon: 'success',
                    title: 'Deleted!',
                    text: 'The dish has been deleted.',
                    timer: 1500,
                    showConfirmButton: false
                  }).then(() => window.location.reload());
                } else {
                  Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Failed to delete the dish.'
                  });
                }
              });
            }
          });
        });
      });
    </script>
  </body>
</html>
