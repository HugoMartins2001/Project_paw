<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/showDishes.css" />
    <title>Pratos Disponíveis</title>
  </head>
  <body>
    <div class="header bg-primary text-white py-3">
      <div class="container d-flex justify-content-between">
        <h3>Pratos Disponíveis</h3>
        <a href="/auth/logout" class="btn btn-danger">Logout</a>
      </div>
    </div>

    <div class="container mt-4">
      <h1 class="mb-4 text-center">Pratos Disponíveis</h1>

      <% if (dishes.length === 0) { %>
        <div class="alert alert-warning text-center">
          <h3>Nenhum prato encontrado.</h3>
        </div>
      <% } else { %>
        <div class="row">
          <% dishes.forEach(function(dish) { %>
            <div class="col-md-6 col-lg-4">
              <div class="card mb-4 shadow-sm">
                <div class="card-body">
                  <h5 class="card-title"><%= dish.name %></h5>
                  <p class="card-text"><strong>Descrição:</strong> <%= dish.description %></p>
                  <p class="card-text"><strong>Preço:</strong> €<%= dish.price.toFixed(2) %></p>
                  <p class="card-text"><strong>Categoria:</strong> <%= dish.category %></p>
                  <div class="d-flex justify-content-between">
                    <a href="/dishes/showDish/<%= dish._id %>" class="btn btn-info">Ver Detalhes</a>
                    <% if (user.role === 'manager') { %>
                      <a href="/dishes/editDish/<%= dish._id %>" class="btn btn-warning">Editar</a>
                      <form action="/dishes/deleteDish/<%= dish._id %>" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja excluir este prato?')">
                          Eliminar
                        </button>
                      </form>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

      <div class="text-center">
        <% if (user.role === 'manager') { %>
          <a href="/dishes/submitDishes" class="btn btn-primary mt-4">Criar Novo Prato</a>
        <% } %>
        <a href="/index" class="btn btn-secondary mt-4">Voltar à Página Principal</a>
      </div>
    </div>

    <!-- Bootstrap JS (necessário para o funcionamento dos componentes do Bootstrap) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
