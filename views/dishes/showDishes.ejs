<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Available Dishes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/stylesheets/showDishes.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter&display=swap" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="icon" type="image/png" href="/favicon.png">
  </head>

  <body>
    <%- include('../partials/header') %> 

    <div class="container">
      <div class="card">
        <h1>Available Dishes</h1>

        <% if (dishes.length === 0) { %>
          <div class="alert alert-warning text-center">
            <h3>No dishes found.</h3>
          </div>
        <% } else { %>
          <div class="row">
            <% dishes.forEach(function(dish) { %>
              <div class="col-md-6 mb-4">
                <div class="dish-card">
                  <h5><%= dish.name %></h5>
                  <p><strong>Description:</strong> <%= dish.description %></p>
                  <p><strong>Price:</strong><br>
                    <strong>Small:</strong> €<%= dish.prices.pequena.toFixed(2) %><br>
                    <strong>Medium:</strong> €<%= dish.prices.media.toFixed(2) %><br>
                    <strong>Large:</strong> €<%= dish.prices.grande.toFixed(2) %>
                  </p>
                  <p><strong>Category:</strong> <%= dish.category %></p>

                  <div class="d-flex flex-wrap gap-2 mt-3">
                    <a href="/dishes/showDish/<%= dish._id %>" class="btn btn-outline-primary">View Details</a>
                    <% if ((user.role === 'Manager' && dish.managerId.toString() === user._id.toString()) || user.role === 'Admin') { %>
                      <a href="/dishes/editDish/<%= dish._id %>" class="btn btn-outline-secondary">Edit</a>
                      <button class="btn btn-outline-danger delete-dish-btn" data-dish-id="<%= dish._id %>">Delete</button>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>

        <div class="mt-4 d-grid gap-2">
          <% if (user.role === 'Manager' || user.role === 'Admin') { %>
            <a href="/dishes/submitDishes" class="btn btn-primary">Create New Dish</a>
          <% } %>
          <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
        </div>
      </div>
    </div>

    <script src="https://kit.fontawesome.com/yourkitid.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.querySelectorAll('.delete-dish-btn').forEach(button => {
        button.addEventListener('click', function () {
          const dishId = this.getAttribute('data-dish-id');
          Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!'
          }).then((result) => {
            if (result.isConfirmed) {
              fetch(`/dishes/deleteDish/${dishId}`, {
                method: 'POST'
              }).then(response => {
                if (response.ok) {
                  Swal.fire({
                    icon: 'success',
                    title: 'Deleted!',
                    text: 'The dish has been deleted.',
                    confirmButtonColor: '#4CAF50',
                    timer: 1500,
                    showConfirmButton: false
                  }).then(() => {
                    window.location.reload();
                  });
                } else {
                  Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Failed to delete the dish.',
                    confirmButtonColor: '#d33'
                  });
                }
              });
            }
          });
        });
      });
    </script>
  </body>
</html>
