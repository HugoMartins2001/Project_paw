<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/editDish.css">
    <title>Editar Prato</title>
</head>
<body>
    <!-- Cabeçalho -->
    <div class="header bg-primary text-white py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h3>Editar Prato</h3>
            <!-- Botão de Logout com o estilo correto -->
            <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <!-- Conteúdo principal -->
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Editar Prato</h1>

        <form action="/dishes/editDish/<%= dish._id %>" method="POST">
            <!-- Campo Nome do Prato -->
            <div class="mb-3">
                <label for="name" class="form-label">Nome do Prato:</label>
                <input type="text" id="name" name="name" value="<%= dish.name %>" class="form-control" required>
            </div>
        
            <!-- Campo Descrição -->
            <div class="mb-3">
                <label for="description" class="form-label">Descrição:</label>
                <textarea id="description" name="description" class="form-control" required><%= dish.description %></textarea>
            </div>
        
            <!-- Campo Preço -->
            <div class="mb-3">
                <label for="price" class="form-label">Preço:</label>
                <input type="number" step="0.01" id="price" name="price" value="<%= dish.price %>" class="form-control" required>
            </div>
        
            <!-- Campo Categoria -->
            <div class="mb-3">
                <label for="category" class="form-label">Categoria:</label>
                <select id="category" name="category" class="form-select" required>
                    <option value="carne" <%= dish.category === 'carne' ? 'selected' : '' %>>Carne</option>
                    <option value="peixe" <%= dish.category === 'peixe' ? 'selected' : '' %>>Peixe</option>
                    <option value="sobremesa" <%= dish.category === 'sobremesa' ? 'selected' : '' %>>Sobremesa</option>
                    <option value="vegetariano" <%= dish.category === 'vegetariano' ? 'selected' : '' %>>Vegetariano</option>
                </select>
            </div>
        
            <!-- Campo Ingredientes -->
            <div class="mb-3">
                <label for="ingredients" class="form-label">Ingredientes:</label>
                <input type="text" id="ingredients" name="ingredients" value="<%= dish.ingredients.join(', ') %>" class="form-control" required>
            </div>
        
            <!-- Botão para Enviar -->
            <div class="mb-3 text-center">
                <button type="submit" class="btn btn-primary">Guardar Alterações</button>
            </div>
        </form>

        <!-- Botão para voltar à lista de pratos -->
        <div class="text-center mt-4">
            <a href="/dishes/showDishes" class="btn btn-secondary">Voltar à Lista de Pratos</a>
        </div>
    </div>

    <!-- Adicionando o script do Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
